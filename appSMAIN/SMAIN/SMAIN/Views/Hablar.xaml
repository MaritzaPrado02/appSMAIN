<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SMAIN.Views.Hablar"
             Title="Hablar"
             IconImageSource="im_hablar.png">

    <ContentPage.Content >
        <StackLayout BackgroundColor="#ABD0ED">
            <Label Text="Hablar" 
                   Padding="10" 
                   VerticalTextAlignment="Center" 
                   HorizontalTextAlignment="Center"
                   TextColor="Gray"
                   FontSize="Large"
                   FontAttributes="Bold"></Label>
            <Frame VerticalOptions="FillAndExpand" CornerRadius="40" Margin="20,10,20,20">
                <StackLayout  BackgroundColor="White">
                    <Label Text="Hola" TextColor="Black"></Label>
                    <Entry Placeholder="Ingrese el audio" TextColor="Black"></Entry>
                    <Button Text="Reproducir"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>